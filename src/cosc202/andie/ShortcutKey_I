package cosc202.andie;

import java.awt.KeyEventDispatcher;
import java.awt.KeyboardFocusManager;
import java.awt.event.KeyEvent;

public class ShortcutKey_I extends ViewActions{
    private static volatile boolean wPressed = false;
    public static boolean isWPressed() {
        synchronized (ShortcutKey_I.class) {
            return wPressed;
        }
    }

    public static void main(String[] args) {
        KeyboardFocusManager.getCurrentKeyboardFocusManager().addKeyEventDispatcher(new KeyEventDispatcher() {
            public boolean dispatchKeyEvent(KeyEvent ke) {
                synchronized (ShortcutKey_I.class) {
                    switch (ke.getID()) {
                    case KeyEvent.KEY_PRESSED:
                        if (ke.getKeyCode() == KeyEvent.VK_I) {
                            wPressed = true;
                        }
                        break;

                    case KeyEvent.KEY_RELEASED:
                        if (ke.getKeyCode() == KeyEvent.VK_I) {
                            wPressed = false;
                        }
                        break;
                    }
                    return false;
                }
            }
        });
    }

public class ZoomOutAction extends ImageAction {
    ZoomOutAction(String name, ImageIcon icon, String desc, Integer mnemonic) {
        super(name, icon, desc, mnemonic);
    }

    public void actionPerformed(ActionEvent e) {\
        if(ShortcutKey_I.isWPressed()){
        target.setZoom(target.getZoom()-10);
        target.repaint();
        target.getParent().revalidate();
        }
    }
}


}